@page "/services/edit"

@using Admin.Components.Shared.Service
@using Admin.Data.Helpers
@using Core.Dto;
@using Core.Interfaces
@using System.Globalization

@inject IServiceTypeService ServiceTypeService
@inject IMessageService MessageService
@inject StateContainerSingle<ServiceType> StateContainer
@inject NavigationManager NavigationManager


@if (Service != null)
{
    <h1>Manage Your Service:</h1>

    <CascadingValue Value="Service">
        <ServiceForm IsCreating="false" />
    </CascadingValue>
}

@code {
    private ServiceType? Service;

    protected override void OnParametersSet()
    {
        Service = StateContainer.GetItem();
    }

    protected override void OnAfterRender(bool firstRender)
    {
        if (Service == null)
        {
            MessageService.AddMessage(new MessageBase(
                    message: "Unable to locate service type to edit",
                    severity: MessageBase.MessageType.Warning
            ));

            NavigateBack(true);
        }
    }

    private void OnDateAvailabilityChange(DayOfWeek day, bool available)
    {
        Service!.DaysOffered[day] = available;
    }

    private void Delete()
    {
        // TODO open another Are You Sure dialog
    }

    private void SaveChangesAsync()
    {
        // TODO open another Are You Sure dialog with warning
    }

    private void NavigateBack(bool replaceHistory = false)
    {
        NavigationManager.NavigateTo("/services", new NavigationOptions
            {
                ReplaceHistoryEntry = replaceHistory,
            });
    }
}
